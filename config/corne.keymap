#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
// | ESC  |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
// | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | LSHFT|
//                    | GUI | LWR | SPC |   | ENT | RSE  | CTRL|
                        bindings = <
   &kp TAB   &kp Q &kp W &kp E &kp R &kp T         &kp Y &kp U  &kp I     &kp O   &kp P    &kp BSPC
   &lt 4 ESC &kp A &kp S &kp D &kp F &kp G         &kp H &kp J  &kp K     &kp L   &lt 4 SEMI &kp SQT
   &kp LSHFT &kp Z &kp X &kp C &kp V &kp B         &kp N &kp M  &kp COMMA &kp DOT &kp FSLH &kp RSHFT
                  &kp LGUI &mo 1 &mt LSHFT SPACE   &mt LSHFT RET &mo 2 &kp LCTRL
                        >;
                };
                lower_layer {
// -----------------------------------------------------------------------------------------
// |      |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  |      |
// |      | ALT | CTL | TAB | C-b | `   |   | LFT | DWN |  UP | RGT | BKSP|      |
// |      |     |     |     |     |     |   | HOM | PGD | PGU | END| DEL |      |
//                    | GUI |     | SPC |   |     | SUP |     |
                        bindings = <
   &trans     &kp N1       &kp N2       &kp N3       &kp N4       &kp N5         &kp N6   &kp N7    &kp N8    &kp N9    &kp N0   &trans
   &trans     &kp LALT     &kp RCTRL    &kp TAB      &kp LC(B)    &kp GRAVE      &kp LEFT &kp DOWN  &kp UP    &kp RIGHT &kp BSPC &trans
   &trans     &kp LC(Z)    &kp LC(X)    &kp LC(C)    &kp LC(V)    &trans         &kp HOME &kp PG_DN &kp PG_UP &kp END   &kp DEL  &trans
                          	        &kp LGUI     &trans       &trans      &trans  &mo 3    &trans
                        >;
                };

                raise_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  |  |  \  | BKSP |
// |      |  {  |  }  |  +  |  =  |  -  |   |  _  |  (  |  )  |  "  |  :  |      |
// |      |  `  |  ~  |  [  |  ]  |     |   |     |  '  |  <  |  >  | ?   |      |
//                    |     |     | SUP |   |     |     |     |
                        bindings = <
   &kp TAB   &kp EXCL  &kp AT    &kp HASH &kp DLLR    &kp PRCNT   &kp CARET &kp AMPS  &kp KP_MULTIPLY &kp PIPE  &kp BSLH  &kp BSPC
   &trans    &kp LBRC  &kp RBRC  &kp PLUS &kp EQUAL   &kp MINUS   &kp LPAR  &kp RPAR  &kp LBKT        &kp DQT   &kp COLON &trans
   &trans    &kp GRAVE &kp TILDE &kp LBKT &kp RBKT    &trans      &kp SQT   &kp LT    &kp GT          &kp QMARK &kp PIPE  &trans
                    	       &trans   &mo 3       &trans      &trans    &trans    &trans
                        >;
                };

                super_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  F1  |  F2  |  F3            |  F4           |  F5  |   |  F6  |  F7  |  F8  |  F9  |  F10  | F11 |
// |      |      |      |  ALT(SHIFT(3)) | ALT(SHIFT(4)) | PRNT |   | PREV | PLAY | NEXT | VOLD | VOLU  | F12 |
// | BTCLR| BT1  | BT2  | BT3            | BT4           | BT5  |   |      |      |      |      |       | MUT |
//                    |      |     |    |        |     |     |     |
                        bindings = <
   &trans      &kp F1       &kp F2       &kp F3        &kp F4        &kp F5         &kp F6     &kp F7     &kp F8     &kp F9       &kp F10      &kp F11
   &trans      &trans       &trans       &kp LA(LS(3)) &kp LA(LS(4)) &kp PSCRN      &kp C_PREV &kp C_PLAY &kp C_NEXT &kp C_VOL_DN &kp C_VOL_UP &kp F12
   &bt BT_CLR  &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4   &trans     &trans     &trans     &trans       &trans       &kp C_MUTE
                          	        &trans        &trans       &trans         &trans     &trans     &trans
                        >;
                };

                tiling_layer {
                        bindings = <
   &trans      &kp LA(LS(1)) &kp LA(LS(2)) &kp LA(LS(3)) &kp LA(LS(4)) &kp LA(LS(5)) &kp LA(LS(6)) &kp LA(LS(7)) &kp LA(LS(8)) &kp LA(LS(9)) &trans      &trans
   &trans      &trans        &trans     &trans     &trans        &trans         &trans     &trans     &trans     &trans       &trans      &trans
   &trans      &trans        &trans       &trans   &trans        &trans         &trans     &trans     &trans     &trans       &trans      &trans
                          	        &trans        &trans       &trans         &trans     &trans     &trans
                        >;
                };
        };
};
